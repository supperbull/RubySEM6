<%- model_class = Katalog -%>
<div class="page-header">
  <h1><%=t '.title', default: 'Informacje' %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nazwa) %></dt>
      <dd><pre class="prettyprint"><%= @katalog.nazwa %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:opis) %></dt>
      <dd><pre class="prettyprint"><%= @katalog.opis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @katalog.url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("Wróć")),
              katalogs_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("Edytuj")),
              edit_katalog_path(@katalog), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("Usuń")),
              katalog_path(@katalog),
              method: 'delete',
              data: { confirm: t('.confirm', default: 'Czy na pewno chcesz usunąć ten rekord?') },
              class: 'btn btn-danger' %>
</div>